<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ch.nike.mapper.MemberMapper">

	<!-- MemberCon -->
	<select id="select" parameterType="string" resultType="member">
		select	*
		from	member
		where	email = #{email}
	</select>
	<insert id="insert" parameterType="member">
		insert	into	member
				values	(#{email},
						#{name},
						#{password},
						#{memberGender},
						#{birthday},
						#{memberTel},
						sysdate,
						'N')
	</insert>
	<update id="changePw" parameterType="member"> <!-- 새비밀번호 변경 -->
		update	member
		set		password = #{password}
		where	email = #{email}
	</update>
	
	
	
	
	<!-- AccountCon -->
	<update id="deleteMember" parameterType="string">
		update	member
		set		member_del = 'Y'
		where	email = #{email}
	</update>
	
	
	
	<!-- AdminCon -->
	<select id="paginglist" parameterType="pagingbean" resultType="member">
		select 	* 
		from 	(select a.*, rowNum rn from (select * from member 
			<where>
				<if test="keyword!=null and keyword!=''">
						${keyword} like '%' || #{search} || '%'
				</if>
			</where>
		order by reg_date desc)a) 
		where 	rn between #{startRow} and #{endRow}
	</select>
	<select id="getTotal" parameterType="pagingbean" resultType="integer"> <!-- 페이징용 전체 회원 카운트 by창률 -->
		select 	count(*) 
		from	member
			<where>
				<if test="keyword!=null and keyword!=''">
						${keyword} like '%' || #{search} || '%'
				</if>
			</where>
	</select>
	
	<update id="updateProfile" parameterType="Member">
		update 	member 
		set 	member_tel=#{memberTel}, 
				birthday=#{birthday} 
		where 	email=#{email}
	</update>
	
	
	<insert id="kakaoinsert" parameterType="Member">
		insert into 	member 
		values			(#{account_email}, 
						'user1',
						#{kakao_id},
						'U',
						'2000-01-01',
						'010-0000-0000',
						sysdate,
						'N')
	</insert>
	<select id="kakaoselect" parameterType="member" resultType="member">
		select	*
		from	member
		where	email = #{account_email}
	</select>

	<!-- NikeLogin -->
	<insert id="insertByNaver" parameterType="member">
		insert	into	member
				values	(#{email},
						#{name},
						#{password},
						#{memberGender},
						To_Date('1993-12-10','yy/mm/dd'),
						#{memberTel},
						sysdate,
						'N')
	</insert>

</mapper>
